{
    "manifest_version": 3,
    "name": "Mi Extensión",
    "version": "1.0",
    "description": "Descripción de mi extensión.",
    "action":{
      "default_popup":"./index.html"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["contentScript.js"],
        "type": "module"
      }
    ],
    "options_page": "file_upload.html",
    "background": {
      "service_worker": "background.js"
    },
    "permissions":["activeTab","scripting","storage", "tabs"]
  }